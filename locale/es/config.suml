locale: 'es'

header: true

pronouns:
    enabled: true
    default: 'él'
    any: 'any'
    plurals: false
    honorifics: false
    multiple:
        name: 'Interchangeable forms'
        description: 'Many nonbinary people use more than one form interchangeably and are fine with being called either of them.'
        examples: ['él&ella', 'él&elle', 'ella&elle']
    null: false
    emoji: false
    slashes: false
    avoiding: false
    others: 'Other pronouns'

pronunciation:
    enabled: true
    voices:
        ES:
            language: 'es-ES'
            voice: 'Lucia'
            engine: 'standard'
        MX:
            language: 'es-MX'
            voice: 'Mia'
            engine: 'standard'

sources:
    enabled: true
    route: 'sources'
    submit: true
    mergePronouns: {}

nouns:
